<style>
  .hide {
    display: none !important;
  }

  .card-container {
    display: flex;
    flex-direction: column;

    margin: 1rem 0;
  }

  .tabs-list {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
  }

  .tab {
    background-color: transparent;
    color: var(--color-text);
    font-weight: 700;
    font-size: 100%;

    /* hide on mobile */
    display: none;
  }

  .tab:hover, .tab:active {
    background-color: var(--color-faded-less);
  }

  .summary-list {
    max-width: 600px;
  }

  hgroup > * {
    margin: 0;
  }

  hgroup > p {
    font-size: 90%;
  }

  hgroup {
    margin: 1rem 0;
  }

  /* for large screens */
  @media (min-width: 1000px) {
    .card-container {
      flex-direction: row;
    }

    .tabs-list {
      flex-direction: column;
    }

    .tab {
      padding: 0 2rem;
      border: none;
      border-left: 2px solid var(--color-accent);

      display: flex;
      justify-content: center;
      align-items: center;
    }

    .space {
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
  }
</style>
