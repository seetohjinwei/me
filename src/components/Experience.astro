    <div class="card-container">
      <div class="tabs-list">
        <button class="button button-active" onclick="handleClick(this, 'tiktok')">TikTok</button>
        <button class="button" onclick="handleClick(this, 'cinch')">Cinch</button>
        <button class="button" onclick="handleClick(this, 'nus')">NUS</button>
      </div>
      <div class="experience-card" id="tiktok">
        <hgroup>
