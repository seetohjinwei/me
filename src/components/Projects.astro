    border: 1px solid var(--color-text);
    border-radius: 10px;
    padding: 20px 40px;
    margin-bottom: 1em;
  }

  .title {
    font-size: 1.5em;
    margin: 0 0 0.3em;
  }

  .tech > * {
    font-size: 90%;
  }

  div.image {
    display: flex;
    justify-content: center;
    width: 100%;
  }

  img.horizontal {
    width: 100%;
  }

  img.vertical {
    max-height: 500px;
    max-width: 100%;
    width: auto;
  }

  div.links {
    display: flex;
